<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.example.rokly.bakewithme.RecipeDetailActivity">

    <!--
    This layout is a two-pane layout for the master/detail flow.
    -->

    <!-- The static MasterListFragment -->
    <fragment
        android:id="@+id/recipe_detail_fragment"
        android:name="com.example.rokly.bakewithme.RecipeDetailStepsIngredientsFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent" />

    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <fragment
        android:id="@+id/recipe_step_fragment"
        android:name="com.example.rokly.bakewithme.RecipeDetailSingleStepsIngredientFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>